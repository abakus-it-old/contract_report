<?xml version="1.0"?>
<openerp>
	<data>
		<report 
			id="contract_abakus"
			string="Contract Timesheet Report"
			model="account.analytic.account" 
			report_type="qweb-pdf"
			file="contract_report" 
			name="contract_report.report_contract"
		/>
       
		<template id="report_contract_document">
			<t t-name="contract_report.report_contract_document">
				<t t-call="report.external_layout">
					<div class="page">
						<style type="text/css">
                                .table-striped > tbody > tr:nth-child(2n+1) > td, .table-striped > tbody > tr:nth-child(2n+1) > th {
									background-color: #F9F9F9;
                                }

								.abakusBordered {
									border: 2px #F68B19 solid;
									background-color: #F9F9F9;
								}

								.abakusBackground {
									background-color: #F68B19;
									color: #F9F9F9;
								}
						</style>
						<div class="row">
							<div class="col-xs-5 col-xs-offset-7">
								<strong><span t-field="o.partner_id"/></strong>
								<address t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;], &quot;no_marker&quot;: true}"/>
								<span t-field="o.partner_id.vat"/>
							</div>
						</div>

						<h1 class="text-center">Timesheets and Invoices Report</h1>

						<!-- contract details -->
						<table class="table abakusBordered">
							<tr>
								<th>Contract</th>
								<td><span t-field="o.name"/> (<span t-esc="o.format_date(o.date_start)"/> - <span t-esc="o.format_date(o.date)"/>)</td>
							</tr>
							<tr>
								<th>Custommer</th>
								<td><span t-field="o.partner_id.name"/></td>
							</tr>
							<tr>
								<th>Prepaid units</th>
								<td><span t-esc="o.decimal_to_hours(o.quantity_max)"/> H (Unit price: <span t-esc="o.format_decimal_number(o.timesheet_product_price)"/> €, On site price: <span t-esc="o.format_decimal_number(o.on_site_product.lst_price)"/> €)</td>
							</tr>
							<tr>
								<th>Period</th>
								<td><span t-esc="o.get_report_interval(o.date_start,o.date)"/></td>
							</tr>
							<tr>
								<th>Date</th>
								<td><span t-esc="time.strftime('%d-%m-%Y')"/></td>
							</tr>
						</table>
                        
                        <div style="page-break-inside:avoid;">
                            <h2>Service delivery</h2>
                            <!-- analytic line details -->
                            <table class="table table-condensed table-striped">
                                <tr class="abakusBordered">
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th style="width: 130px;">User</th>
                                    <th>Kind</th>
                                    <th>Quantity</th>
                                    <th>Invoiceable</th>
                                    <th class="text-right" style="width: 90px;">Amount</th>
                                </tr>
                                <t t-set="service_delivery_total" t-value="0"/>
                                <t t-set="working_hours_total" t-value="0"/>
                                <t t-set="on_site_total" t-value="0"/>							
                                <t t-set="price" t-value="o.timesheet_product_price"/>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <t t-if="not line.ref and o.check_start_end_line_date(line.date)">
                                        <tr>
                                            <td>
                                                <span t-field="line.date" t-field-options="{&quot;format&quot;: &quot;dd.MM.YYYY&quot;}"/>
                                            </td>
                                            <td><span t-field="line.name"/></td>
                                            <td><span t-field="line.user_id.name"/></td>
                                            <td>
                                                <t t-if="line.on_site==True">
                                                    <t t-set="computed_amount" t-value="o.on_site_product.lst_price"/>
                                                    <t t-set="on_site_total" t-value="on_site_total + 1"/>	
                                                    OS
                                                </t>
                                                <t t-if="line.on_site==False">
                                                    <t t-set="computed_amount" t-value="0"/>
                                                    SD
                                                </t>
                                            </td>
                                            <td><span t-esc="o.decimal_to_hours(line.unit_amount)"/></td>
                                            <td><span t-esc="line.to_invoice.name"/></td>
                                            <t t-set="computed_amount" t-value="computed_amount + ((price * line.unit_amount)*((100-line.to_invoice.factor)/100))"/>
                                            <td class="text-right"><span t-esc="o.format_decimal_number(computed_amount)"/> €</td>
                                        </tr>
                                        <t t-set="service_delivery_total" t-value="service_delivery_total + computed_amount"/>
                                        <t t-set="working_hours_total" t-value="working_hours_total + line.unit_amount"/>
                                    </t>
                                </t>        
                            </table>
                            <table class="table">
                                <tr class="abakusBordered">
                                    <th>Service delivery total</th>
                                    <th class="text-right"><span t-esc="o.format_decimal_number(service_delivery_total)"/> €</th>
                                </tr>
                            </table>
                        </div>
                        
                        <div style="page-break-inside:avoid;">
                            <h2>Invoices</h2>
                            <table class="table table-condensed table-striped">
                                <tr class="abakusBordered">
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>Reference</th>
                                    <th style="width: 90px;">Amount</th>
                                </tr>
                                <t t-set="prepaid_instalment_total" t-value="0"/>
                                <t t-foreach="o.line_ids" t-as="line">
                                    <t t-if="line.ref and o.check_start_end_line_date(line.date)">
                                        <tr>
                                            <td>
                                                <span t-field="line.date" t-field-options="{&quot;format&quot;: &quot;dd.MM.YYYY&quot;}"/>
                                            </td>
                                            <td><span t-field="line.name"/></td>
                                            <td><span t-field="line.ref"/></td>
                                            <td><span t-esc="o.format_decimal_number(line.amount)"/> €</td>
                                        </tr>
                                        <t t-set="prepaid_instalment_total" t-value="prepaid_instalment_total + line.amount"/>
                                    </t>
                                </t>        
                            </table>
                            <table class="table">
                                <tr class="abakusBordered">
                                    <th>Invoices total</th>
                                    <th class="text-right"><span t-esc="o.format_decimal_number(prepaid_instalment_total)"/> €</th>
                                </tr>
                            </table>
                        </div>

                        <div style="page-break-inside:avoid;">
                            <h2>Summary</h2>
                            <table class="table abakusBackground">
                                <tr>
                                    <th>Working hours</th>
                                    <td class="text-right"><span t-esc="o.decimal_to_hours(working_hours_total)"/></td>
                                </tr>
                                <tr>
                                    <th>On site support</th>
                                    <td class="text-right"><span t-esc="on_site_total"/></td>
                                </tr>
                                <tr>
                                    <th>Service delivery</th>
                                    <td class="text-right"><span t-esc="o.format_decimal_number(service_delivery_total)"/> €</td>
                                </tr>
                                <tr>
                                    <th>Invoices</th>
                                    <td class="text-right"><span t-esc="o.format_decimal_number(prepaid_instalment_total)"/> €</td>
                                </tr>
                                <tr>
                                    <th>Balance</th>
                                    <t t-set="balance" t-value="prepaid_instalment_total - service_delivery_total"/>
                                    <th class="text-right">
                                    <t t-if="balance&gt;=0">
                                        In your favour
                                    </t>
                                    <t t-if="balance&lt;0">
                                        In our favour
                                    </t>    
                                    <span t-esc="o.format_decimal_number(abs(balance))"/> €</th>
                                </tr>
                            </table> 
                            <small>All prices plus VAT, where applicable.</small>
				        </div>
                        
                        <div style="page-break-inside:avoid;">
                            <h3>Information</h3>
                            <table class="table table-condensed table-bordered">
                                <tr>
                                    <th>SD</th>
                                    <td>Service Desk accessible by calling +32 87 59 35 58 or per email at support@abakusitsolutions.eu</td>
                                </tr>
                                <tr>
                                    <th>OS</th>
                                    <td>"On-Site" on site intervention / appointment</td>
                                </tr>
                                <tr>
                                    <th>SLA</th>
                                    <td>Service Level Agreement</td>
                                </tr>
                                <tr>
                                    <th>Reaction time: (Compliance 85%)</th>
                                    <td> SD : reaction per email or telephone<br/>
                                        OD : technician present on site<br/>
                                        Reaction time are only available  valid for customers with SLA contracts.
                                    </td>
                                </tr>
                            </table>
                        </div>
                        
                        <t t-if="o.isStatistics()">
                            <div style="page-break-inside:avoid;">
                                <h1 class="text-center text-uppercase">Statistics</h1>
                                <table class="table">
                                    <tr>
                                        <td>
                                            <h2>Issues per stage</h2>
                                            <t t-foreach="o.dictionary_to_list(o._issue_per_stage())" t-as="stage">
                                                <span t-esc="stage[0]"/>: <span t-esc="stage[1]"/>
                                                <br/>
                                            </t>
                                        </td>
                                        <td class="text-right"><img t-att-src="o.issue_per_stage" style="max-height:200px;"/></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h2>SLA</h2>
                                            <t t-foreach="o.dictionary_to_list(o._issue_per_result())" t-as="result">
                                                <span t-esc="result[0]"/>: <span t-esc="result[1]"/>
                                                <br/>
                                            </t>
                                            Average reaction time: <t t-if="int(o.average_reaction_time)==0">0-1</t><t t-if="int(o.average_reaction_time)>0"><span t-esc="int(o.average_reaction_time)"/></t> min
                                        </td>
                                        <td class="text-right"><img t-att-src="o.issue_per_result" style="max-height:200px"/></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h2>Issues per service delivery type</h2>
                                            <t t-set="types" t-value="o._issue_per_type_detail()"/>
                                            <table class="table table-condensed table-bordered">
                                                <tr>
                                                    <th></th>
                                                    <th>SD</th>
                                                    <th>OS</th>
                                                    <th>Total</th>
                                                </tr>
                                                <tr>
                                                    <th>Issues</th>
                                                    <td><span t-esc="types['SD']['ticketSum']"/></td>
                                                    <td><span t-esc="types['OS']['ticketSum']"/></td>
                                                    <td><span t-esc="types['OS']['ticketSum']+types['SD']['ticketSum']"/></td>
                                                </tr>                                               
                                                <tr>
                                                    <th>Time</th>
                                                    <td><span t-esc="o.decimal_to_hours(types['SD']['timeSum'])"/></td>
                                                    <td><span t-esc="o.decimal_to_hours(types['OS']['timeSum'])"/></td>
                                                    <td><span t-esc="o.decimal_to_hours(types['OS']['timeSum']+types['SD']['timeSum'])"/></td>
                                                </tr>
                                                 <tr>
                                                    <th>Price</th>
                                                    <td><span t-esc="o.format_decimal_number(types['SD']['priceSum'])"/> €</td>
                                                    <td><span t-esc="o.format_decimal_number(types['OS']['priceSum'])"/> €</td>
                                                    <td><span t-esc="o.format_decimal_number(types['OS']['priceSum']+types['SD']['priceSum'])"/> €</td>
                                                </tr>
                                                <tr>
                                                    <th>Work logs</th>
                                                    <td>
                                                        <t t-foreach="o.dictionary_to_list(types['SD']['stuff'])" t-as="stuff">
                                                            <span t-esc="stuff[0]"/>: <span t-esc="stuff[1]"/>
                                                            <br/>
                                                        </t>
                                                    </td>
                                                    <td>
                                                        <t t-foreach="o.dictionary_to_list(types['OS']['stuff'])" t-as="stuff">
                                                            <span t-esc="stuff[0]"/>: <span t-esc="stuff[1]"/>
                                                            <br/>
                                                        </t>
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            </table>
                                        </td>
                                        <td class="text-right"><img t-att-src="o.issue_per_type" style="max-height:200px"/></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <h2>Issues per priority</h2>
                                            <t t-foreach="o.dictionary_to_list(o._issue_per_priority())" t-as="priority">
                                                <span t-esc="priority[0]"/>: <span t-esc="priority[1]"/>
                                                <br/>
                                            </t>
                                        </td>
                                        <td class="text-right"><img t-att-src="o.issue_per_priority" style="max-height:200px"/></td>
                                    </tr>
                                </table> 
                            </div>
                        </t>
				    </div>
				</t>
			</t>
		</template>
       
        <template id="report_contract">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'contract_report.report_contract_document')"/>
                </t>
            </t>
        </template>
    </data>
</openerp>
